{
  "branches": [
    "main",
    {
      "name": "develop",
      "prerelease": true,
      "channel": "beta"
    }
  ],
  "plugins": [
    "@semantic-release/commit-analyzer",
    [
      "@semantic-release/release-notes-generator",
      {
        "preset": "angular",
        "writerOpts": {
          "types": [
            {
              "type": "feat",
              "section": "✨ Funcionalidades"
            },
            {
              "type": "fix",
              "section": "🐛 Correções"
            },
            {
              "type": "docs",
              "section": "📚 Documentação"
            },
            {
              "type": "style",
              "section": "💄 Estilos"
            },
            {
              "type": "refactor",
              "section": "♻️ Refatoração de código"
            },
            {
              "type": "perf",
              "section": "⚡ Melhorias de performance"
            },
            {
              "type": "test",
              "section": "✅ Testes"
            },
            {
              "type": "build",
              "section": "📦 Sistema de build"
            },
            {
              "type": "ci",
              "section": "👷 Configuração de CI"
            },
            {
              "type": "chore",
              "section": "🔧 Outros"
            }
          ],
          "commitUrlFormat": "https://github.com/seu-usuario/seu-repo/commit/{{hash}}",
          "compareUrlFormat": "https://github.com/seu-usuario/seu-repo/compare/{{previousTag}}...{{currentTag}}",
          "issueUrlFormat": "https://github.com/seu-usuario/seu-repo/issues/{{id}}"
        }
      }
    ],
    "@semantic-release/changelog",
    "@semantic-release/npm",
    [
      "@semantic-release/git",
      {
        "message": "chore(release): Versão ${nextRelease.version}",
        "skipCI": false
      }
    ],
    "@semantic-release/github"
  ]
}
